{
  "name": "be",
  "version": "1.0.0",
  "description": "Fest Entry Verification System Backend",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:convex\" \"npm run dev:server\"",
    "dev:convex": "convex dev",
    "dev:server": "NODE_OPTIONS='--no-network-family-autoselection' tsx watch src/server.ts",
    "build": "tsc",
    "build:local": "convex codegen && tsc",
    "start": "node dist/server.js",
    "convex:deploy": "convex deploy"
  },
  "dependencies": {
    "convex": "^1.17.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.3",
    "qrcode": "^1.5.4",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.0.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "packageManager": "pnpm@10.27.0"
}
